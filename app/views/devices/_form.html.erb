<%= simple_form_for(@device) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :id %>
    <%= f.input :user_id %>
    <%= f.input :token %>
    <%= f.input :enabled %>
    <%= f.input :platform %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

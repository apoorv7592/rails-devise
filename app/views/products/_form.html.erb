<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>


  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :url %>
    <%= f.input :meta_title %>
    <%= f.input :meta_description %>
    <%= f.input :meta_keywords %>
    <%= f.input :company_id %>
    <%= f.input :price %>
    <%= f.input :mrp %>
    <%= f.input :weight %>
    <%= f.input :rank %>
    <%#= f.input :status %>
    <%= f.file_field :image, :multiple => true %>
  </div>


  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

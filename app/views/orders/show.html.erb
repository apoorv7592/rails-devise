<style>
table, td, th {
    border: 1px solid black;
    text-align:center;
}

table {
    width: 100%;
    border-collapse: collapse;
}

th{
  background: #66cccc;
  color:white;
}

td{
  background: rgba(1,0,0,0.1);
}

</style>


<div style="padding:100px;font-size:15px;">
<p id="notice"><%= notice %></p>

<div>
  <strong>Address:</strong>

      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Pincode</th>
            <th>Address</th>
            <th>Mobile</th>
            <th>City</th>
            <th>State</th>
          </tr>
        </thead>

        <tbody>
            <tr>
              <% if @order.address.present? %>
              <td><%= @order.address.first_name %>  <%= @order.address.last_name %> </td>
              <td><%= @order.address.pincode %> </td>
              <td><%= @order.address.landmark %> <%= @order.address.address %> </td>
              <td><%= @order.address.mobile %></td>
              <td><%= @order.address.city %> </td>
              <td><%= @order.address.state %> <%= @order.address.country %></td>
              <% end %>
            </tr>
        </tbody>
      </table>     
</div>

<br/><br/>
<div>
  <strong>User Info:</strong>
  <% if @order.user.present? %>
  <%= @order.user.name %>
  <br/><%= @order.user.email %>
  <br/><%= @order.user.phone %>
  <% end %>
</div>
<br/><br/>

<div>
  <strong>Products:</strong>
    <div>
      <table>
        <thead>
          <tr>
            <th>Product Name</th>
            <th>Product Size</th>
            <th>Quantity</th>
          </tr>
        </thead>

        <tbody>
          <% @order_products.each do |product| %>
            <tr>
              <td><%= product.product_size.product.name %></td>
              <td><%= product.product_size.size %> <%= product.product_size.size_unit %></td>
              <td><%= product.quantity %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>
<br/><br/>
<p>
  <strong>Total Quantity:</strong>
  <%= @order.total_quantity %>
</p>
<p>
  <strong>Order Amount</strong>
  <%= @order.amount %>
</p>
<p>
  <strong>Total Discount:</strong>
  <%= @order.discount_amount %>
</p>
<p>
  <strong>Final Amount(Net Payable):</strong>
  <%= @order.final_amount %>
</p>

<p>
  <strong>Cod money:</strong>
  <%= @order.cod_money || 0 %>
</p>

<p>
  <strong>Shipping money:</strong>
  <%= @order.shipping_money || 0 %>
</p>

<p>
  <strong>Status:</strong>
  <%= @order.status %>
</p>

<p>
  <strong>Is confirm:</strong>
  <%= @order.is_confirm %>
</p>

<p>
  <strong>Payment gateway:</strong>
  <%= @order.payment_gateway %>
</p>


<p>
  <strong>Note:</strong>
  <%= @order.note %>
</p>

<%= link_to 'Back', orders_path %>
</div>

<style>
table, td, th {
    border: 1px solid black;
    text-align:center;
}

table {
    width: 100%;
    border-collapse: collapse;
}

th{
  background: #66cccc;
  color:white;
}

td{
  background: rgba(1,0,0,0.1);
}
</style>

<p id="notice"><%= notice %></p>
<div  class="col-md-10 col-md-offset-1" style="width:1000px;">
  <h1 style="text-align:center;"> Listing Product Sizes</h1>
  </br>
  <div class="row">
    <div class="col-md-12">
      <%= link_to 'New Product Size', new_product_size_path, class: 'pull-right', class: 'btn btn-primary'%>
    </div>
  </div>
  <div class="row" style="margin-top:30px;">
    <div class="col-md-12">
      <table>
        <thead>
          <tr>
            <th>Id</th>
            <th>Product Name</th>
            <th>Product Size</th>
            <th>Status</th>
            <th colspan="3" >Action</th>
          </tr>
        </thead>

        <tbody>
          <% @product_sizes.each do |product_size| %>
            <tr>

              <td><%= product_size.id %></td>
              <td><%= product_size.product.name %></td>
              <td><%= product_size.size.to_s + product_size.size_unit.to_s %></td>
              <td><%= product_size.status %></td>
              <td><%= link_to 'Show', product_size %></td>
              <td><%= link_to 'Edit', edit_product_size_path(product_size) %></td>
              <td><%= link_to 'Destroy', product_size, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

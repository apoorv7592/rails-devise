<p id="notice"><%= notice %></p>
<div  class="col-md-10 col-md-offset-1" style="width:1000px;">
  <h1 style="text-align:center;"> Listing Categories</h1>
  </br>
  <div class="row">
    <div class="col-md-12">
      <%= link_to 'New Category', new_category_path, class: 'pull-right', class: 'btn btn-primary'%>
    </div>
  </div>
  <div class="row" style="margin-top:30px;">
    <div class="col-md-12">
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Status</th>
            <th>Url string</th>
            <th>Seo title</th>
            <th>Seo meta</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td><%= category.description %></td>
              <td><%= category.status %></td>
              <td><%= category.url_string %></td>
              <td><%= category.seo_title %></td>
              <td><%= category.seo_meta %></td>
              <td><%= link_to 'Show', category %></td>
              <td><%= link_to 'Edit', edit_category_path(category) %></td>
              <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


